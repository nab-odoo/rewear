datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  name     String?
  points   Int      @default(0)
  items    Item[]
}

model Item {
  id          String   @id @default(cuid())
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String
  title       String
  description String
  category    String
  size        String
  condition   String
  tags        String
  status      String   @default("available")
  createdAt   DateTime @default(now())
}
